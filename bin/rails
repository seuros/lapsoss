#!/usr/bin/env ruby
# frozen_string_literal: true

# Special handling for test command to only run Rails tests
if ARGV[0] == 'test' && ARGV.length == 1
  # If just 'bin/rails test' is run, default to Rails tests only
  ARGV << 'test/rails_*.rb'
end

APP_PATH = File.expand_path('../test/dummy/config/application', __dir__)
require_relative '../test/dummy/config/boot'
require 'rails/commands'
